{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "frontend/src/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@components/*": [
        "frontend/src/components/*"
      ],
      "@pages/*": [
        "frontend/src/pages/*"
      ],
      "@api/*": [
        "frontend/src/api/*"
      ],
      "@styles/*": [
        "frontend/src/styles/*"
      ],
      "@utils/*": [
        "frontend/src/utils/*"
      ],
      "@hooks/*": [
        "frontend/src/hooks/*"
      ],
      "@stores/*": [
        "frontend/src/stores/*"
      ]
    }
  },
  "include": [
    "frontend/src/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backend",
    "dist"
  ]
}